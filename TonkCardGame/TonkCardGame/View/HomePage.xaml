<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TonkCardGame"
             x:Class="TonkCardGame.HomePage"
             BackgroundImageSource="{local:ImageResource TonkCardGame.images.CardBackground.jpg}">
    <ContentPage.Content>
        <StackLayout >
            <Label 
                   Text=" Classic Tonk Card Game" 
                   TextColor="Black"  
                   FontSize="45" 
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand" 
                   FontAttributes="Italic,Bold"/>
            <Button
                CornerRadius="20"
                   WidthRequest="200"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"
                   Text="Play"
                   BackgroundColor="Tan"
                   TextColor="Black"
                   FontSize="25"
                   Clicked="GamePlay_Clicked"
                   BorderColor="DarkRed"
                   BorderWidth="4"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>